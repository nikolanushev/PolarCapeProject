@model IEnumerable<PolarCape.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h3>Employees</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="text-align:right">
            @Html.ActionLink("Edit", "Edit", "Employees", new { id = item.EmployeeId }, new { @class = "btn btn-primary" })
            @Html.ActionLink("Details", "Details", "Employees", new { id = item.EmployeeId }, new { @class = "btn btn-success" })
            @Html.ActionLink("Delete", "Delete", "Employees", new { id = item.EmployeeId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<p style="text-align:right">
    @Html.ActionLink("Create New", "Create", "Employees", new { @class = "btn btn-primary" })
</p>