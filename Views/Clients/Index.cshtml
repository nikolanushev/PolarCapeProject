@model IEnumerable<PolarCape.Models.Client>

@{
    ViewBag.Title = "Index";
}

<h3>Clients</h3>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="text-align:right">
            @Html.ActionLink("Edit", "Edit", "Clients", new { id=item.ClientId }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", "Clients", new { id=item.ClientId }, new { @class = "btn btn-success" }) 
            @Html.ActionLink("Delete", "Delete", "Clients", new { id=item.ClientId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>

<p style="text-align:right">
    @Html.ActionLink("Create New", "Create", "Clients", new { @class = "btn btn-primary" })
</p>
